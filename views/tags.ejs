<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <% if (pageTitle){ %>
    <title><%= pageTitle %></title>
  <% } else { %>
    <title>Welcome to Seyi Blog. Not Easy Abeg</title>
  <% } %>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

  <!-- Custom styles for this template -->
  <link href="/css/clean-blog.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">Seyi's Blog</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto" id="customLogin">
          <li class="nav-item">
            <a class="nav-link" href="index.html">Home</a>
          </li>
          <li class="nav-item" id="customLogin">
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="masthead imageView" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading headerUp">
            <h1>Seyi</h1>
            <span class="subheading">This wasn't Easy at all</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container-fluid">
    <div class="row">
      <!-- new col under -->
    <div class="col-md-9">
      <div class="col-lg-8 col-md-10 mx-auto text-center">
        <h2>Category: <span id="tagDiplayTitle"><%=pageTitle%></span></h2>
        <hr>
      </div>
      <div class="col-lg-8 col-md-10 mx-auto" id="tag_search">
        <!-- blog post run here -->
        <% data.forEach((article)=>{%>
        <div class="post-preview" id="tagPost">
          <a href="/views/<%=article.id%>">
            <h2 class="post-title">
            <%= article.title %> 
            </h2>
            <h3 class="post-subtitle">
            <%= article.blog_main.slice(0,50) %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%=article.author%></a>
            on <%=article.date.slice(0,24)%></p>
            <p class="text-right"> <i class="fas fa-folder-open"></i>  <a href="/tag_post/<%=article.tags%>"><%=article.tags%></a></p>
            <hr>
        </div>
        <% }) %>
        <div class="clearfix pagination" id="tagPagination">
          <!-- navigation Runs here -->
        </div>
      </div>
      <div class="col-lg-8 col-md-10 mx-auto" id="displaypNumber">
          <!-- temp page Number show -->
        </div>
    </div>
    <div class="col-md-3">
      <!-- widget reside here -->
      <div class="card mb-3" id="fullsideBar">
          <div class="card-body">
              <h5 class="card-title">Stay Updated</h5>
              <p class="card-text">Don't want to miss updates? Please click the below button!</p>
              <a href="#" class="btn btn-primary">Subscribe to my feed</a>
          </div>
      </div>

      <!--Dynamic Titles-->
      <div class="card mb-3">
              <div class="card-header">
                      Featured
              </div>
              <div class="card-body">
                  <ul class="list-group list-group-flush" id="featured_titles">
                      <!--Dynamic Blog Posts title-->
                  </ul>
              </div>
              <div class="card-footer text-muted" id="titlePagination">
                  <!-- title Pagination -->
              </div>
              
      </div>
      <!--Catgories-->
      <div class="card mb-3">
              <div class="card-header">
                      Category
              </div>
              <div class="card-body">
                  <ul class="list-inline" id="category_view">
                      <!--Dynamic Catgories-->
                  </ul>
              </div>
      </div>
      <!-- widget end here -->
    </div>
      <!-- new div above -->
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <ul class="list-inline text-center">
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
          <p class="copyright text-muted">Copyright &copy; Your Website 2019</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>
  <!-- <script src="./js/index.js"></script> -->
  <!-- <script src="./js/paginate.js"></script> -->
  <script src="/js/all.js"></script>
  <!-- <script src="./js/tags.js"></script> -->
  <!-- <script src="./admin/js/customizer.js"></script> -->

</body>

</html>
